{
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext", "DOM"],
        "baseUrl": "./",
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "typeRoots": ["./node_modules/@types", "src/types"],
        "paths": {
            "@core/*": ["src/core/*"],
            "@proto/*": ["src/proto/*"],
            "@service/*": ["src/service/*"],
            "@utils/*": ["src/utils/*"],
            "@/*": ["src/*"]
        },
        "strict": true,
        "noImplicitAny": false,
        "alwaysStrict": false
    },
    "include": ["src/**/*"]
}
